{
  "name": "hodgepodge-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_HODGEPODGE_ENV=development nodemon src/index.ts --exec ts-node",
    "build": "rm -rf dist && tsc && cp -rf src/migrations dist/migrations",
    "test": "cross-env NODE_HODGEPODGE_ENV=test jest --runInBand",
    "test:watch": "yarn test --watch",
    "start": "pm2 start pm2.config.js --env production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js, jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "koa-static-cache": "^5.1.3",
    "lodash": "^4.17.15",
    "marked": "^1.1.0",
    "module-alias": "^2.2.2",
    "moment": "^2.25.3",
    "mysql2": "^2.1.0",
    "next": "^9.4.4",
    "pretty-error": "^2.1.1",
    "ramda": "^0.27.0",
    "randomstring": "^1.1.5",
    "sequelize": "^5.21.7",
    "supertest": "^4.0.2",
    "umzug": "^2.3.0",
    "winston": "^3.2.1",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/dotenv": "^8.2.0",
    "@types/hapi__joi": "^17.1.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa-static-cache": "^5.1.0",
    "@types/lodash": "^4.14.150",
    "@types/marked": "^0.7.4",
    "@types/module-alias": "^2.0.0",
    "@types/moment": "^2.13.0",
    "@types/next": "^9.0.0",
    "@types/node": "^13.13.5",
    "@types/ramda": "^0.27.6",
    "@types/randomstring": "^1.1.6",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^4.2.5",
    "jest": "^26.2.1",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.9.1",
    "ts-paths": "^0.1.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  }
}
